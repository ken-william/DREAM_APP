# =====================================================
# DOCKERFILE SQLite - SYNTHÉTISEUR DE RÊVES PRODUCTION
# Version simplifiée pour SQLite (recommandée)
# =====================================================

# Stage 1: Build Frontend React
FROM node:18-alpine AS frontend-builder

WORKDIR /app/frontend
COPY frontend/package*.json ./
RUN npm ci --only=production

COPY frontend/ ./
RUN npm run build

# Stage 2: Python Backend + SQLite
FROM python:3.12-slim

# Métadonnées
LABEL maintainer="Dream Synthesizer Team"
LABEL version="1.0-sqlite"
LABEL description="Application de synthèse de rêves avec IA (SQLite)"

# Variables d'environnement
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DJANGO_SETTINGS_MODULE=config.settings

# Installer les dépendances système (SANS PostgreSQL)
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Créer utilisateur non-root pour la sécurité
RUN groupadd -r dreamapp && useradd -r -g dreamapp dreamapp

# Créer et définir le répertoire de travail
WORKDIR /app

# Copier et installer les dépendances Python (version SQLite)
COPY requirements-sqlite.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copier le code backend
COPY backend/ ./backend/

# Copier le frontend build depuis le stage précédent
COPY --from=frontend-builder /app/frontend/build ./backend/frontend/build/

# Créer les dossiers nécessaires
RUN mkdir -p /app/backend/staticfiles /app/backend/media /app/backend/logs

# Changer la propriété des fichiers
RUN chown -R dreamapp:dreamapp /app

# Basculer vers l'utilisateur non-root
USER dreamapp

# Collecter les fichiers statiques
WORKDIR /app/backend
RUN python manage.py collectstatic --noinput

# Exposer le port
EXPOSE 8000

# Health check simple (sans dépendance PostgreSQL)
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health/ || exit 1

# Script de démarrage SQLite simplifié
COPY docker-entrypoint-sqlite.sh /app/
USER root
RUN chmod +x /app/docker-entrypoint-sqlite.sh
USER dreamapp

# Commande par défaut
ENTRYPOINT ["/app/docker-entrypoint-sqlite.sh"]
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "3", "config.wsgi:application"]
